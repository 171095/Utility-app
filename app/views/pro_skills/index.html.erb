<%- model_class = ProSkill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:professional_id) %></th>
      <th><%= model_class.human_attribute_name(:skill_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pro_skills.each do |pro_skill| %>
      <tr>
        <td><%= link_to pro_skill.id, pro_skill_path(pro_skill) %></td>
        <td><%= pro_skill.professional_id %></td>
        <td><%= pro_skill.skill_id %></td>
        <td><%=l pro_skill.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      pro_skill_path(pro_skill), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pro_skill_path(pro_skill), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pro_skill_path(pro_skill),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pro_skill_path,
            :class => 'btn btn-primary' %>
