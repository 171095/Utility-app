<%- model_class = ProSkill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:professional_id) %>:</strong></dt>
  <dd><%= @pro_skill.professional_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skill_id) %>:</strong></dt>
  <dd><%= @pro_skill.skill_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pro_skills_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pro_skill_path(@pro_skill), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pro_skill_path(@pro_skill),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
