<%- model_class = CurrentWorkplace -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:joined_on) %></th>
      <th><%= model_class.human_attribute_name(:work_profile) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @current_workplaces.each do |current_workplace| %>
      <tr>
        <td><%= current_workplace.joined_on %></td>
        <td><%= current_workplace.work_profile %></td>
        <td><%= current_workplace.designation %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      current_workplace_path(current_workplace), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_current_workplace_path(current_workplace), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      current_workplace_path(current_workplace),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_current_workplace_path,
            :class => 'btn btn-primary' %>
