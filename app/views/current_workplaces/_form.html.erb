<%= form_for @current_workplace, :html => { :class => "form-horizontal current_workplace" } do |f| %>

  <% if @current_workplace.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@current_workplace.errors.count, "error") %> prohibited this current_workplace from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @current_workplace.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :joined_on, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :joined_on, :class => 'form-control' %>
    </div>
    <%=f.error_span(:joined_on) %>
  </div>
  <div class="form-group">
    <%= f.label :about_workplace, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :about_workplace, :class => 'form-control' %>
    </div>
    <%=f.error_span(:about_workplace) %>
  </div>
  <div class="form-group">
    <%= f.label :work_profile, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :work_profile, :class => 'form-control' %>
    </div>
    <%=f.error_span(:work_profile) %>
  </div>
  <div class="form-group">
    <%= f.label :designation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :designation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:designation) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                current_workplaces_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
