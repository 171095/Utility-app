<%= form_for @current_workplace, remote: true,  :html => { :class => "form-horizontal current_workplace" } do |f| %>

  <% if @current_workplace.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@current_workplace.errors.count, "error") %> prohibited this current_workplace from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @current_workplace.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%= f.hidden_field :professional_id, value: current_professional.id%>

  <div class="form-group">
    <%= f.label :joined_on, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <div class='input-group date' id='start-date'>
        <%= f.text_field :joined_on, :class => 'form-control' %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
    </div>
    <%=f.error_span(:joined_on) %>
  </div>
  <div class="form-group">
    <%= f.label :work_profile, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :work_profile, :class => 'form-control' %>
    </div>
    <%=f.error_span(:work_profile) %>
  </div>
  <div class="form-group">
    <%= f.label :designation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :designation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:designation) %>
  </div>
  <div class="form-group">
    <%= f.label :about_workplace, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :about_workplace, :class => 'form-control' %>
    </div>
    <%=f.error_span(:about_workplace) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <button type="button" class='btn btn-default' id="cancel-detail">Cancel</button>
    </div>
  </div>

<% end %>
<script type="text/javascript">
 $("#cancel-detail").on('click', function(){
    $("#pro-current-details").html('');
  });
</script>

<script type="text/javascript">
  $('#start-date').datepicker({
    format: 'mm/dd/yyyy',
    todayHighlight: true,
    autoclose: true,
    locale: 'ru'
  });
</script>