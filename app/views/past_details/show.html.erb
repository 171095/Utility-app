<%- model_class = PastDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:joined_on) %>:</strong></dt>
  <dd><%= @past_detail.joined_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:left_on) %>:</strong></dt>
  <dd><%= @past_detail.left_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_profile) %>:</strong></dt>
  <dd><%= @past_detail.work_profile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation) %>:</strong></dt>
  <dd><%= @past_detail.designation %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              past_details_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_past_detail_path(@past_detail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              past_detail_path(@past_detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
