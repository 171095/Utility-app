<%- model_class = PastDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:joined_on) %></th>
      <th><%= model_class.human_attribute_name(:left_on) %></th>
      <th><%= model_class.human_attribute_name(:work_profile) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @past_details.each do |past_detail| %>
      <tr>
        <td><%= link_to past_detail.id, past_detail_path(past_detail) %></td>
        <td><%= past_detail.joined_on %></td>
        <td><%= past_detail.left_on %></td>
        <td><%= past_detail.work_profile %></td>
        <td><%= past_detail.designation %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      past_detail_path(past_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_past_detail_path(past_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      past_detail_path(past_detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_past_detail_path,
            :class => 'btn btn-primary' %>
