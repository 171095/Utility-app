<%= form_for :current_details, url: :add_current_details_professional_account, method: :post, remote: true do |f|%>
  
  <%= f.hidden_field :professional_id , value: @professional.id %>

  <%= f.label :joined_on %>
  <%= f.text_field :joined_on, class: "form-control"%>

  <%= f.label :work_profile %>
  <%= f.text_field :work_profile, class: "form-control"%>

  <%= f.label :designation %>
  <%= f.text_field :designation, class: "form-control"%>

  <%= f.label :abount_workplace %>
  <%= f.text_area :abount_workplace, class: "form-control"%>
<% end %>